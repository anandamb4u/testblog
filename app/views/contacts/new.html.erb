<h1>Contact Us</h1>
<div class="col-md-4">
    <div class = "well">
<%=form_for @contact do |f|%>
 
  
 <div class="form-group">
        <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, class:'form-control', placeholder:'name' %>
        </div>
     </div>
   
    <div class="form-group">
     <div class="field">
        <%= f.label :email %><br>
        <%= f.text_area :email, class:'form-control', placeholder:'email' %>
      </div>
    </div>

    <div class="form-group">
     <div class="field">
        <%= f.label :mobile %><br>
        <%= f.text_area :mobile, class:'form-control', placeholder:'mobile#' %>
      </div>
    </div>
  
    <div class="form-group">
     <div class="field">
        <%= f.label :message %><br>
        <%= f.text_area :message, class:'form-control', placeholder:'type your message here' %>
      </div>
    </div>
    
     <!--<div class="form-group">
     <div class="actions">
        <%= f.submit %>
      </div>
    </div>-->
  
 <%= f.submit 'Submit' %>

<% end %>
</div>
</div>