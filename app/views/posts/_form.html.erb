<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<form>
 <div class="form-group">
   <div class="col-sm-10">
    
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, class:'form-control', placeholder:'title' %>
      </div>
    </div>
</div>
<div class="form-group">
   <div class="col-sm-10">
     
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, class:'form-control', placeholder:'body' %>
      </div>
    </div>
</div>
  
  <div class="form-group">
   <div class="col-sm-10">
      <div>
         <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
    </div>
  </div>
  <div class="form-group">
   <div class="col-sm-10">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
</form>
<% end %>
