<p id="notice"><%= notice %></p>
<form class="form-horizontal">
  <div class="form-group">
   <div class="col-sm-10">
    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>
    </div>
  </div>

  <div class="form-group">
   <div class="col-sm-10">
    <p>
      <strong>Body:</strong>
      <%= @post.body %>
    </p>
    </div>
  </div>
  <div class="form-group">
   <div class="col-sm-10">
    <p>
      <strong>Image:</strong>
      <%= image_tag @post.image_url(:medium) if @post.image? %>  
    </p>
    </div>
  </div>


<%= link_to 'Edit', edit_post_path(@post),class: 'btn btn-primary' %> 
<%= link_to 'Back', posts_path,class: 'btn btn-primary' %>
</form>